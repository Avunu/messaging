{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Vue */
    "types": ["vite/client"],

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["messaging/public/js/*"]
    }
  },
  "include": [
    "messaging/public/js/**/*.ts",
    "messaging/public/js/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
